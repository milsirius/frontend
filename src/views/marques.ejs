<% for(var i = 0; i< marques.length; i++) { %>
    <div class="row col-sm-10 contenidor">
      <div class="column col-sm-4" style="margin-bottom:15px;" onclick="location.href='http://localhost:3000/marcas/<%= marques[i].nommarca %>';">
        <h3 style="margin-top:25px"> <%= marques[i].nommarca %> </h3>
        <img class="img" width="<%= marques[i].width %>" height="<%= marques[i].height %>" src="<%= marques[i].linkimg %>">
      </div>

      <div class="column col-sm-8" style="background-color:;">
        <div class="row">

          <div class="column col-sm-6" style="background-color:;margin-top:30px;margin-bottom:30px">
            <ul style="margin-top:20px;margin-bottom:20px">
          <% for (var e=0; e < array[i].length; ++e) {%>
            <% if (e%2==1) {%>
              <li style="margin-top:10px;margin-bottom:10px"><a style="color:#212529; text-decoration:none" href="http://localhost:3000/idprod/<%= array[i][e]%>"> <%= array[i][e] %></a></li>
            <% } %>
          <% }%>
          <li style="margin-top:30px;margin-bottom:5px;list-style-type: none;"><a style="color:#212529; text-decoration:underline" href="http://localhost:3000/marcas/<%= marques[i].nommarca %>"> Ver todos </a></li>
            </ul>
          </div>

          <div class="column col-sm-6" style="background-color:;margin-top:30px;margin-bottom:30px">
            <ul style="margin-top:20px;margin-bottom:20px">
              <% for (var e=0; e < array[i].length; ++e) {%>
                <% if (e%2==1) {%>
                  <li style="margin-top:10px;margin-bottom:10px"><a style="color:#212529; text-decoration:none" href="http://localhost:3000/idprod/<%= array[i][e]%>"> <%= array[i][e] %></a></li>
                <% } %>
              <% }%>
            </ul>
          </div>
        </div>
      </div>
    </div>
<% } %>






  </body>
